{
  "name": "swoole-bundle/resetter-bundle",
  "homepage": "https://github.com/swoole-bundle/resetter-bundle",
  "type": "symfony-bundle",
  "description": "Symfony bundle with resetters for various connections, e.g. doctrine/dbal and phpredis.",
  "license": "MIT",
  "authors": [
    {
      "name": "Martin Fris",
      "email": "rasta@lj.sk",
      "homepage": "https://github.com/Rastusik"
    }
  ],
  "require": {
    "php": ">=8.3",
    "doctrine/dbal": "^4.4",
    "doctrine/doctrine-bundle": "^2.18|^3.0",
    "doctrine/orm": "^3.2",
    "symfony/config": "^6.4|^7.3",
    "symfony/dependency-injection": "^6.4|^7.3",
    "symfony/yaml": "^6.4|^7.3"
  },
  "autoload": {
    "psr-4": {
      "SwooleBundle\\ResetterBundle\\": "src/"
    }
  },
  "require-dev": {
    "ext-redis": "*",
    "friendsofphp/php-cs-fixer": "^3.93",
    "nikic/php-parser": "^5.7",
    "php-parallel-lint/php-parallel-lint": "^1.4",
    "phpcompatibility/php-compatibility": "^10.0.0-alpha2",
    "phpmd/phpmd": "^2.15",
    "phpro/grumphp-shim": "^2.19",
    "phpstan/phpstan": "^2.1",
    "phpstan/phpstan-webmozart-assert": "^2.0",
    "phpunit/phpunit": "^12.0",
    "psalm/phar": "^6.15",
    "rector/rector": "^2.3",
    "roave/security-advisories": "dev-master",
    "slevomat/coding-standard": "^8.27",
    "squizlabs/php_codesniffer": "^4.0",
    "symfony/browser-kit": "^6.4|^7.3",
    "symfony/dom-crawler": "^6.4|^7.3",
    "symfony/flex": "^2.10",
    "symfony/framework-bundle": "^6.4|^7.3",
    "symfony/http-kernel": "6.4|^7.3",
    "symfony/phpunit-bridge": "^6.4|^7.3"
  },
  "autoload-dev": {
    "psr-4": {
      "SwooleBundle\\ResetterBundle\\Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpro/grumphp-shim": true,
      "symfony/flex": true
    }
  },
  "scripts": {
    "grumphp8.3": "BOX_REQUIREMENT_CHECKER=0 grumphp run --testsuite=php8.3",
    "grumphp8.3-no-analyse": "BOX_REQUIREMENT_CHECKER=0 grumphp run --testsuite=php8.3-no-analyse",
    "grumphp8.4-no-analyse": "BOX_REQUIREMENT_CHECKER=0 grumphp run --testsuite=php8.4-no-analyse",
    "grumphp8.5-no-analyse": "BOX_REQUIREMENT_CHECKER=0 grumphp run --testsuite=php8.5-no-analyse",
    "phpcs": "phpcs --standard=phpcs.xml",
    "phpcbf": "phpcbf --standard=phpcs.xml --extensions=php --tab-width=4 -sp src tests",
    "code-style:check": "php-cs-fixer --config=./.php-cs-fixer.dist.php fix --dry-run --diff --ansi --verbose src tests",
    "code-style:fix": "php-cs-fixer --config=./.php-cs-fixer.dist.php fix --diff --ansi src tests",
    "phpmd": "phpmd src text phpmd.xml",
    "phpstan": "phpstan analyse src --level=max",
    "phpunit": "phpunit",
    "psalm": "psalm.phar"
  },
  "extra": {
    "symfony": {
      "require": "6.4.*"
    }
  }
}
